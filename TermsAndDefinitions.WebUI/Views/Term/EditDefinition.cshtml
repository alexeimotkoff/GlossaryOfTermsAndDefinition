@model TermsAndDefinitions.WebUI.ViewModels.DefinitionViewModel

@using (Ajax.BeginForm("Update", new AjaxOptions { UpdateTargetId = "definition" + Model.IdDefinition.ToString(), HttpMethod = "POST" }))
{
    <div class="form-horizontal">
         <div class="col-md-8">
                @Html.TextAreaFor(model => model.Description,  new { @class = "form-control" })
         </div>
        <div class="form-group">
            @Html.LabelFor(model => model.URL, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.URL, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.URLTitle, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.URLTitle, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-offset-1 col-md-7">
            <input type="Submit" value="Сохранить" class="btn btn-default" />
        </div>
    </div>
}