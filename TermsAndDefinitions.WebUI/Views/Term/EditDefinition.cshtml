@model TermsAndDefinitions.WebUI.ViewModels.DefinitionViewModel

@using (Ajax.BeginForm("Update", new AjaxOptions { UpdateTargetId = "definition" + Model.IdDefinition.ToString(), HttpMethod = "POST" }))
{
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.IdDefinition)
        @Html.HiddenFor(model => model.IdTerm)
        @Html.HiddenFor(model => model.TermName)
        <div class="form-group">
            <div class="col-sm-6 col-xs-7">
                <span class="term">@Model.TermName</span>
            </div>
            <div class="col-sm-2 col-sm-push-4 col-xs-1 col-xs-push-3">
                <input type="Submit" value="Сохранить" class="btn btn-default">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder="Введите определение", style ="resize:vertical;"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.URL, new { @class = "control-label col-sm-1" })
            <div class="col-sm-6 col-xs-11">
                @Html.TextBoxFor(model => model.URL, new { @class = "form-control", placeholder = "Ссылка на источник" })
            </div>
            <div class="col-sm-5 col-xs-12">
                @Html.TextBoxFor(model => model.URLTitle, new { @class = "form-control", placeholder = "Название источника" })
            </div>
        </div>
    </div>
}
