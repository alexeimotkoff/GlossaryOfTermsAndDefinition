@model TermsAndDefinitions.WebUI.ViewModels.AddTermViewModel

@using (Ajax.BeginForm("Add", new AjaxOptions { UpdateTargetId = "Main", HttpMethod = "POST" }))
{
    @Html.AntiForgeryToken()
    <p class="help-block">
        @Html.ValidationSummary(true)
    </p>
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-sm-4 col-xs-11">
                    @Html.TextBoxFor(model => model.TermName, new { @class = "form-control", placeholder = "Введите термин" })
                    <p class="help-block">
                        @Html.ValidationMessageFor(model => model.TermName, null, new { @class = "text-danger" })
                    </p>
                </div>
                <div class="col-sm-2 col-sm-push-4 col-xs-1 col-xs-push-3">
                    <input type="Submit" value="Сохранить" class="btn btn-success btn-xs">
                </div>
            </div>
           

            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextAreaFor(model => model.Definition, new { @class = "form-control", placeholder = "Введите определение", style = "resize:vertical;" })
                    <p class="help-block">
                        @Html.ValidationMessageFor(model => model.Definition, null, new { @class = "text-danger" })
                    </p> 
                </div>

        </div>
          
        <div class="form-group">
            @Html.LabelFor(model => model.URL, new { @class = "control-label col-sm-1" })
            <div class="col-sm-6 col-xs-11">
                @Html.TextBoxFor(model => model.URL, new { @class = "form-control", placeholder = "Ссылка на источник" })
                @Html.ValidationMessageFor(model => model.URL, null, new { @class = "text-danger" })
</div>
            <div class="col-sm-5 col-xs-12">
                @Html.TextBoxFor(model => model.URLTitle, new { @class = "form-control", placeholder = "Название источника" })
            </div>
        </div>
          
               
    </div>
}