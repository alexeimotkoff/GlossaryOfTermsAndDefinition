<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width">
        @Styles.Render("~/Content/bootstrap")
        @Styles.Render("~/Content/css")
</head>

<body>
    <div class="page-container">
        <!-- top navbar -->
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target=".sidebar-nav">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">База знаний</a>
                </div>
                @Html.Partial("_LoginPartial")
            </div>
        </div>

        <div class="container">
            <div class="row row-offcanvas row-offcanvas-left">

                <!-- sidebar -->
                <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
                    <ul class="nav">                        
                        @*<li>@Ajax.RouteLink("Термины", "TermAll", new AjaxOptions { UpdateTargetId = "Main", HttpMethod = "GET" })</li>
                        <li>@Ajax.RouteLink("Проекты", "ProjectAll", new AjaxOptions { UpdateTargetId = "Main", HttpMethod = "GET" })</li>*@
                        <li>@Html.ActionLink("Поиск","Index", "Search")</li>
                        <li>@Html.ActionLink("Термины", "Index", "Term")</li>
                        <li>@Html.ActionLink("Проекты", "Index", "Project")</li>
                        <li>@Html.ActionLink("Фундаментальные области", "Index", "Fundarea")</li>
                    </ul>
                    @if (Request.IsAuthenticated)
                    {
                        <ul class="nav">
                            @*<li>@Ajax.RouteLink("Термины", "TermAll", new AjaxOptions { UpdateTargetId = "Main", HttpMethod = "GET" })</li>
                                <li>@Ajax.RouteLink("Проекты", "ProjectAll", new AjaxOptions { UpdateTargetId = "Main", HttpMethod = "GET" })</li>*@
                            <li>@Html.ActionLink("Мои проекты","","")</li>
                            <li>@Html.ActionLink("Добавить термин", "", "")</li>
                            <li>@Html.ActionLink("Добавить проект", "Add" , "Project")</li>
                           
                        </ul>
                    }

                </div>

                <!-- main area -->
                <div class="col-xs-12 col-sm-9">                
                    @RenderBody()             
            </div><!-- /.col-xs-12 main -->
        </div><!--/.row-->
    </div><!--/.container-->
</div><!--/.page-container-->


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("Script", false)
    <script type='text/javascript'>
    $(document).ready(function () {
        $('[data-toggle=offcanvas]').click(function () {
            $('.row-offcanvas').toggleClass('active');
        });
    });

    $("a.nav_link").click(function () {
        $("#SearchResult").load($(this).attr("href"));
        return false;
    });

   $('.grid').masonry({
            itemSelector: '.grid-item',
            columnWidth: 160,
            horizontalOrder: true
        });

</script>


</body>
</html>
